<table class="list">
  <thead><tr>
    <%= sort_header_tag('id', :caption => '#') %>
    <%= sort_header_tag('title', :caption => l(:field_book_title), :default_order => 'asc') %>
    <%= sort_header_tag('author', :caption => l(:field_book_author)) %>
    <%= sort_header_tag('publisher', :caption => l(:field_publisher)) %>
    <%= sort_header_tag('published_on', :caption => l(:field_published_on)) %>
    <%= sort_header_tag('holder_id', :caption => l(:field_holder)) %>
    <%= sort_header_tag('holder_change_histories_count', :caption => l(:field_holder_change_histories_count)) %>
    <%= sort_header_tag('reviews_count', :caption => l(:field_reviews_count)) %>
  </tr></thead>
  <tbody>
<% for book in treasures -%>
  <tr class="<%= cycle("odd", "even") %>">
    <td><%= book.id %></td>
    <td>
      <% if book.intro_url =~ /\.jpg$/ then %>
        <%= link_to image_tag(book.intro_url.sub(/SL(\d+)/, 'SL30'), :height => 30, :alt => book.title), :action => 'show_book', :id => book %>
      <% end %>
      <%= link_to book.title, :action => 'show_book', :id => book %>
    </td>
    <td><%= book.author %></td>
    <td><%= book.publisher %></td>
    <td><%= book.published_on %></td>
    <td><%= book.holder ? link_to_user(book.holder) : '-' %></td>
    <td>
      <%= book.holder_change_histories_count > 1 ? "#{book.holder_change_histories_count - 1} (" + link_to(l(:button_view), :action => 'show_holder_change_histories', :id => book, :type => 'book') + ')' : 0 %>
      <br/>
      <% if Setting.plugin_redmine_ezlibrarian['return_to'] != User.current.id.to_s then %>
        <% if User.current.id == book.holder_id then %>
          <%= link_to l(:text_return), :action => 'return_book', :id => book %>
        <% elsif Setting.plugin_redmine_ezlibrarian['return_to'] == book.holder_id.to_s then %>
          <%= link_to l(:text_borrow), :action => 'borrow_book', :id => book %>
        <% end %>
      <% end %>
    </td>
    <td><%= book.reviews_count > 0 ? "#{book.reviews_count} (" + link_to(l(:button_view), :action => 'show_book', :anchor => 'reviews', :id => book) + ')' : 0 %></td>
  </tr>
<% end -%>
  </tbody>
</table>